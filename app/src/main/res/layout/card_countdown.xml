<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/scoredis"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="7dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="24sp"
            tools:text="1000" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/scoredis"
            android:text="test"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/printed"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/answer"
            android:text="test"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/scoredis"
            android:layout_alignBottom="@+id/scoredis"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="3dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printed"
            android:layout_alignStart="@+id/printed"
            android:layout_alignEnd="@+id/printed"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="167dp"
            android:text="TextView" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="94dp"
            android:layout_height="61dp"
            android:layout_below="@+id/answer"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_marginStart="-114dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="-20dp"
            android:layout_toEndOf="@+id/scoredis"
            android:max="9" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="83dp"
            android:layout_height="66dp"
            android:layout_below="@+id/username"
            android:layout_alignEnd="@+id/printed"
            android:layout_marginTop="-26dp"
            android:layout_marginEnd="274dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printed"
            android:layout_marginStart="84dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/progressBar"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>